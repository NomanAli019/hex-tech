{
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],               // âœ… main fix: "@/components/..." now resolves to app/components/
      "@components/*": ["./app/components/*"],
      "@lib/*": ["./app/lib/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@assets/*": ["./attached_assets/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
